{
    "name": "ezeanyimhenry/email-validator",
    "description": "A PHP package for validating email addresses with detailed checks including MX records, disposable, and banned email lists.",
    "type": "library",
    "keywords": ["email", "validation", "php", "composer"],
    "homepage": "https://github.com/ezeanyimhenry/email-validator",
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "EzeanyimHenry\\EmailValidator\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "EzeanyimHenry\\EmailValidator\\Tests\\": "tests/"
        }
    },
    "authors": [
        {
            "name": "Henry Ezeanyim",
            "email": "henry@oracus.ng"
        }
    ],
    "require": {
        "php": ">=7.4"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.0"
    },
    "minimum-stability": "stable",
    "prefer-stable": true,
    "version": "1.1.0"
}
